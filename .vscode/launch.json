{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "args": [
        "-m", "llava:13b",
        "-t", "10",
        "/mnt/c/sites/photos/me/bestPhotoOfMike.png"
      ],
      "debugPort": "0",
      "env": {"VO_DEBUGGING": true},
      "name": "Debug describe with rdbg",
      "script": "exe/describe",
      "request": "launch",
      "type": "rdbg",
      "useBundler": true,
    },
    {
      "args": [ "README.md" ],
      "debugPort": "0",
      "env": {"VO_DEBUGGING": true},
      "name": "Debug summarize_ollama with rdbg",
      "script": "exe/summarize_ollama",
      "request": "launch",
      "type": "rdbg",
      "useBundler": true,
    },
    {
      "args": [ "README.md" ],
      "env": {"OPEN_API_KEY": "asdf", "VO_DEBUGGING": true},
      "debugPort": "0",
      "name": "Debug summarize_chatgpt with rdbg",
      "script": "exe/summarize_chatgpt",
      "request": "launch",
      "type": "rdbg",
      "useBundler": true,
    },
    {
      "args": [],
      "debugPort": "0",
      "name": "Debug current file with rdbg",
      "script": "${file}",
      "request": "launch",
      "type": "rdbg",
      "useBundler": true,
    },
    {
      "name": "Run selected Ruby file with ruby_lsp",
      "program": "ruby ${file}",
      "request": "launch",
      "type": "ruby_lsp"
    },
    {
      "debugPort": "0",
      "name": "Attach with rdbg",
      "request": "attach",
      "type": "rdbg",
    },
    {
      "name": "Attach with ruby_lsp",
      "request": "attach",
      "type": "ruby_lsp",
    },
    {
      "name": "RSpec - active spec file only",
      "program": "binstub/rspec -I ${workspaceRoot} ${file}",
      "request": "launch",
      "type": "ruby_lsp",
    },
    {
      "name": "RSpec - all",
      "program": "${workspaceRoot}/binstub/rspec -I ${workspaceRoot}",
      "request": "launch",
      "type": "ruby_lsp",
    }
  ]
}
